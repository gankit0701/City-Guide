<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/most_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/image_1"
            android:scaleType="centerCrop"/>
        
        <TextView
            android:id="@+id/most_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taj Hotel"
            android:layout_toRightOf="@+id/most_image"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="monospace"/>

        <RatingBar
            android:id="@+id/most_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/most_title"
            android:layout_toRightOf="@+id/most_image"
            android:layout_marginLeft="10dp"
            android:rating="3.5"/>
        
        <TextView
            android:id="@+id/most_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vzxvzxvzxvczcxvsdvsdcds"
            android:layout_below="@+id/most_rating"
            android:layout_toRightOf="@+id/most_image"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>

            
            
    </RelativeLayout>


</androidx.cardview.widget.CardView>